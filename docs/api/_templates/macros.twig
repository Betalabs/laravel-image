{%

    macro method_arguments(arguments, with_defaults = true)

        %}{%
            for argument in arguments
                %}{{ argument.name }}{%
                    if with_defaults and argument.default|trim != ''
                        %} = {{ argument.default }}{%
                    endif
                %}{%
                    if loop.last == false
                        %}, {%
                    endif
                %}{%
            endfor
        %}{%

    endmacro

%}

{%

    macro method(method, with_defaults = true)
        %}{%
            from _self import method_arguments
        %}{{ method.name }}({{ method_arguments(method.arguments, with_defaults) }}){%
    endmacro

%}

{%

    macro method_argument_description(argument)

        %}{%
            if argument.name|trim != ''
                %}`{{ argument.name }}` {%
            endif
        %}{%
            if argument.type|trim != ''
                %}`({{ argument.type }})` {%
            endif
        %}{%
            if argument.description|trim != ''
                %}{{ argument.description }} {%
            endif
        %}{%

    endmacro

%}
